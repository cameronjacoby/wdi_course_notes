<h1>Login</h1>

<% flash.each do |k, v| %>
  <h2 id="<%= k %>"><%= v %></h2>
<% end %>

<%= form_for :user do |f| %>
  <%= f.text_field :email, placeholder: "Email" %>
  <%= f.password_field :password, placeholder: "Password" %>
  <%= f.submit "Login" %>
<% end %>

<%= link_to "Forgot Password?", new_password_path %>