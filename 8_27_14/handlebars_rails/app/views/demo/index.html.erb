<div class="container">
  <div class="text-center">

    <h2>Search for a Movie</h2>

    <%= form_tag ("javascript:void(0);"), class: "movieSearch" %>
    <p>
      <%= text_field_tag "title", nil, placeholder: "Movie Title", autofocus: true %>
    </p>
    <p><%= submit_tag "Search", class: "btn btn-info" %></p>

    <div class="loading">
      <%= image_tag "loader.gif", style: "margin-top:20px"%>
    </div>

    <div id="movieData"></div>

  </div>
</div>