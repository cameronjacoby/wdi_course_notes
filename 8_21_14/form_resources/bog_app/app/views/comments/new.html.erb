<div class="container">
  <h2>Name: <%= @creature.name %></h2>
  <p>Description: <%= @creature.description %></p>

  <%= form_for [@creature, @comment] do |f| %>
    <p><%= f.text_field :title, class: "form-control" %></p>
    <p><%= f.text_area :body, class: "form-control" %></p>
    <p><%= f.submit "Save Comment", class: "btn btn-primary"%></p>
  <% end %>
</div>